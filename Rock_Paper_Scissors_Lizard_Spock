import random as rd

options = ['✊', '✋', '✌️', '🦎', '🖖']
print('1) ✊')
print('2) ✋')
print('3) ✌️')
print('4) 🦎')
print('5) 🖖')

win_conditions = [[1, 4], [1, 3], [2, 5], [2, 1], [3, 4], [3, 2], [4, 5], [4, 2], [5, 1], [5, 3]]
lose_conditions = [[1, 5], [1, 2], [2, 4], [2, 3], [3, 5], [3, 1], [4, 1], [4, 3], [5, 4], [5, 2]]

while True:
  try:
    user_choice = int(input('Pick a number (1-5): '))
    cpu_choice = rd.randint(0,4)
    print(f'You choose: {options[user_choice-1]}')
    print(f'CPU choose: {options[cpu_choice]}')
    if user_choice == cpu_choice:
      print("It's a tie")
    elif [user_choice, cpu_choice + 1] in win_conditions:
      print("You won!")
    elif [user_choice, cpu_choice + 1] in lose_conditions:
      print("You lose!")

  except ValueError:
    print('Invalid input! Please enter a number')


